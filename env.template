## Copy this file to .env.local and fill values.
## (Do NOT commit .env.local)

## MongoDB
MONGODB_URI=
## Optional (only if your URI does not include a default DB)
MONGODB_DB=

## Admin auth
ADMIN_PASSWORD=
## Any long random string
ADMIN_SESSION_SECRET=

## Email (Resend)
RESEND_API_KEY=
## Example: "Fasea Booking <booking@yourdomain.com>"
EMAIL_FROM=

## Twilio WhatsApp (for auto-cancel + booking notifications)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
## Twilio sandbox/number in E.164, e.g. +14155238886
TWILIO_WHATSAPP_FROM=
## Studio/admin WhatsApp number in E.164, e.g. +60123456789
TWILIO_WHATSAPP_TO=
## Optional: base URL override for testing
TWILIO_API_BASE_URL=

## Job secret (optional). If set, call the job endpoint with header x-job-secret or ?secret=...
AUTO_CANCEL_JOB_SECRET=
## Optional secret for reminder job (same behavior as AUTO_CANCEL_JOB_SECRET)
REMINDER_JOB_SECRET=

